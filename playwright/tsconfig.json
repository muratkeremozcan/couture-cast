{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "@playwright/test"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": false,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "@support/*": ["./support/*"],
      "@couture/api-client": ["../packages/api-client/src/index.ts"],
      "@couture/api-client/*": ["../packages/api-client/src/*"]
    }
  },
  "include": ["**/*.ts", "tests/**/*.ts", "config/**/*.ts", "support/**/*.ts"],
  "exclude": ["node_modules", "playwright-report", "artifacts"]
}
