{
  "openapi": "3.1.0",
  "info": {
    "title": "Socket Event Schemas",
    "version": "0.1.0",
    "description": "Shared payload schemas for ADR-007 namespaces"
  },
  "servers": [
    {
      "url": "https://api.couture-cast.example",
      "description": "Placeholder server for schema validation"
    }
  ],
  "components": {
    "schemas": {
      "LookbookNewEvent": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "minLength": 1
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "userId": {
            "type": "string",
            "minLength": 1
          },
          "data": {
            "type": "object",
            "properties": {
              "postId": {
                "type": "string",
                "minLength": 1
              },
              "locale": {
                "type": "string"
              },
              "climateBand": {
                "type": "string"
              },
              "mediaUrls": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "uri"
                }
              }
            },
            "required": [
              "postId"
            ]
          }
        },
        "required": [
          "version",
          "timestamp",
          "userId",
          "data"
        ]
      },
      "RitualUpdateEvent": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "minLength": 1
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "userId": {
            "type": "string",
            "minLength": 1
          },
          "data": {
            "type": "object",
            "properties": {
              "ritualId": {
                "type": "string",
                "minLength": 1
              },
              "status": {
                "type": "string",
                "enum": [
                  "scheduled",
                  "in-progress",
                  "completed"
                ]
              },
              "nextRunAt": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string"
              }
            },
            "required": [
              "ritualId",
              "status"
            ]
          }
        },
        "required": [
          "version",
          "timestamp",
          "userId",
          "data"
        ]
      },
      "AlertWeatherEvent": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "minLength": 1
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "userId": {
            "type": "string",
            "minLength": 1
          },
          "data": {
            "type": "object",
            "properties": {
              "alertType": {
                "type": "string",
                "enum": [
                  "temperature",
                  "precipitation",
                  "severe"
                ]
              },
              "location": {
                "type": "string",
                "minLength": 1
              },
              "message": {
                "type": "string",
                "minLength": 1
              },
              "severity": {
                "type": "string",
                "enum": [
                  "info",
                  "warning",
                  "critical"
                ]
              }
            },
            "required": [
              "alertType",
              "location",
              "message",
              "severity"
            ]
          }
        },
        "required": [
          "version",
          "timestamp",
          "userId",
          "data"
        ]
      }
    },
    "parameters": {}
  },
  "paths": {},
  "webhooks": {}
}