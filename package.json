{
  "name": "couture-cast",
  "private": true,
  "version": "0.1.0",
  "description": "Couture Cast monorepo",
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "npm run --workspaces --if-present build",
    "typecheck": "npm run --workspaces --if-present typecheck && tsc --noEmit -p playwright/tsconfig.json",
    "typecheck:clear-cache": "find . -name \"*.tsbuildinfo\" -delete && rm -rf node_modules/.cache/typescript",
    "lint": "npm run --workspaces --if-present lint && eslint --max-warnings=0 --ext .ts,.tsx apps playwright && prettier --ignore-path .prettierignore --check \"**/*.{ts,tsx,js,json,md}\"",
    "lint:fix": "npm run --workspaces --if-present lint -- --fix && eslint --max-warnings=0 --ext .ts,.tsx apps playwright --fix && npm run format",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.{ts,tsx,js,json,md}\"",
    "lint:staged": "lint-staged",
    "test": "npm run --workspaces --if-present test",
    "start:web": "npm run start --workspace web -- --hostname 127.0.0.1 --port 3005",
    "start:api": "cross-env PORT=4000 npm run start:dev --workspace api",
    "start:mobile:server": "bash ./scripts/start-mobile-server.sh",
    "start:mobile:e2e": "node ./scripts/mobile-e2e-all.mjs",
    "mobile:sim:ios": "bash ./scripts/start-ios-simulator.sh",
    "mobile:sim:android": "bash ./scripts/start-android-emulator.sh",
    "mobile:device": "open -a \"Android Emulator\" || open -a Simulator || echo \"Launch your emulator manually\"",
    "start:all": "npm-run-all2 --sequential db:reset && npm-run-all2 --parallel start:api start:web",
    "test:pw-local": "cross-env TEST_ENV=local npx playwright test",
    "test:pw-dev": "cross-env TEST_ENV=dev npx playwright test",
    "test:pw-stage": "cross-env TEST_ENV=stage npx playwright test",
    "test:pw-prod": "cross-env TEST_ENV=prod npx playwright test",
    "maestro:install": "node ./scripts/maestro-install.mjs",
    "mobile:expo-go": "node ./scripts/install-expo-go.mjs",
    "test:mobile:e2e": "npm run maestro:install --silent && node ./scripts/run-maestro.mjs maestro/sanity.yaml",
    "test:mobile:e2e:ios": "npm run maestro:install --silent && bash ./scripts/start-ios-simulator.sh && node ./scripts/run-maestro.mjs maestro/sanity.yaml",
    "test:mobile:e2e:attached": "npm run maestro:install --silent && cross-env MOBILE_E2E_SKIP_SERVER=1 node ./scripts/run-maestro.mjs maestro/sanity.yaml",
    "test:mobile:e2e:ci": "npm run maestro:install --silent && node ./scripts/run-maestro.mjs maestro/sanity.yaml --ci",
    "validate": "npm-run-all --aggregate-output --parallel typecheck lint test",
    "clean": "rimraf \"apps/**/dist\" \"packages/**/dist\" \"**/tsconfig.tsbuildinfo\"",
    "clean:install": "npx rimraf node_modules \"apps/**/node_modules\" \"packages/**/node_modules\" && npm install --no-progress",
    "prepare": "husky",
    "db:migrate": "npm run db:migrate -w packages/db",
    "db:seed": "npm run db:seed -w packages/db",
    "db:reset": "npm run db:reset -w packages/db"
  },
  "devDependencies": {
    "@couture/eslint-config": "workspace:*",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "22.9.3",
    "@types/picomatch": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "axe-core": "^4.10.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-implicit-dependencies": "1.1.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "lint-staged": "15.2.10",
    "lodash.merge": "^4.6.2",
    "npm-run-all2": "^7.0.2",
    "picomatch": "^4.0.2",
    "prettier": "3.6.2",
    "prisma": "^6.19.0",
    "rimraf": "5.0.10",
    "tsx": "^4.20.6",
    "turbo": "2.6.1",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings=0 --cache --cache-location node_modules/.cache/eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.19.0"
  }
}
