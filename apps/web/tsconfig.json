{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@couture/api-client": ["../../packages/api-client/src/index.ts"],
      "@couture/api-client/*": ["../../packages/api-client/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
